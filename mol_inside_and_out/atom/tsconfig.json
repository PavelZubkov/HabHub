{
	"compilerOptions": {
		"target": "ES2020",
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"alwaysStrict": false,
		"strict": false,
		"allowUnusedLabels": true,
		"removeComments" : true ,
		"sourceMap" : true ,
		"skipLibCheck" : true,
		"types" : ["node"],
	},
	"exclude": [
		"node_modules",
	],
	"atom": {
		"rewriteTsconfig": false
	},
	"compileOnSave": false,
	"files": [
		"atom.ts"
	]
}